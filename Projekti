#include <iostream>
using namespace std;

class telefoni{
private:

    string prodhuesi;
    string ngjyra;
    float pesha;
    float nivelIBaterise;  
    int memoria;
    float madhesiaEkranit;

public:
telefoni(){

    cout<<"Vendosni prodhuesin e telefonit";
    cin>>prodhuesi;

    cin.ignore();
    cout<<"vendosni ngjyren e telefonit";
    getline(cin,ngjyra);

    cout<<"vendosni peshën e telefonit";
    cin>>pesha;

    cout<<"vendosni nivelin e baterisë së telefonit";
    cin>>nivelIBaterise;
    cout<<"vendosni memorjen e telefonit (ne GB):";
    cin>>memoria;

    cout<<"vendosni madhesin e ekranit (ne inch):";
    cin>>madhesiaEkranit;
}
telefoni(string p,string n,float pe,float nb,int m,float me){
    prodhuesi=p;
    ngjyra=n;
    pesha=pe;
    nivelIBaterise=nb;
    memoria=m;
    madhesiaEkranit=me;
}
int numeroShkronjat(char shkronja){
    int rez=0;
    for(int i=0;i<prodhuesi.length();i++){
        if(shkronja==prodhuesi[i]){
            rez++;
        }
    }
    return rez;
    
}
string ktheMesin(string teksti){
    string rez="";
    if(teksti.length()%2==1){
        rez=teksti[teksti.length()/2];
    }else {
        rez=teksti[teksti.length()/2-1];
        rez+=teksti[teksti.length()/2];
    }
    return rez;
}
float konvertonNeKilograme(){
    return pesha / 1000;
}

string shfaqBaterine()
{
    string rez = "";
    int vija = nivelIBaterise / 10;

    for (int i = 0; i < vija; i++)
    {
        rez += "-";
    }
    return rez;
}

string getProdhuesi()
{
    return prodhuesi;
}

string getNgjyra()
{
    return ngjyra;
}

int getMemoria()
{
    return memoria;
}

float getMadhesiaEkranit()
{
    return madhesiaEkranit;
}
};

int main() {


    telefoni t1;

    cout<<"Numri i shkronjave 'a' ne prodhuesin e telefonit:"<<t1.numeroShkronjat('a')<<endl;

    cout<<"Mesatarja (mesi) e prodhuesit te telefonit:"<<t1.ktheMesin(t1.getProdhuesi())<<endl;

    cout<<"Pesha e telefonit ne kilogram:"<< t1.konvertonNeKilograme()<<"kg"<<endl;

    cout<<"Niveli i baterise :"<<t1.shfaqBaterine()<<endl;

    cout<<"Prodhuesi i telefonit:"<<t1.getProdhuesi()<<endl;

}